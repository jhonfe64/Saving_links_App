    <div class="conatiner p-4">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <!-- ojo cuando se envien los datos del form los enviarÃ¡ a la ruta /links/edit/+ el id  en routes/links -->
                        <form action="/links/edit/<%= link.id %>" method="post">
